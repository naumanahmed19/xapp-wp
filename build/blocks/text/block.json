{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "xapp/text-block",
  "version": "0.1.0",
  "title": "Text",
  "category": "text",
  "icon": "layout",
  "description": "A single text block without html tags",
  "keywords": [
    "text"
  ],
  "textdomain": "mdc-tabs",
  "editorScript": "file:./index.js",
  "attributes": {
    "align": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "default": "text"
    },
    "settings": {
      "type": "object",
      "default": {
        "text": "",
        "type": "text",
        "url": "",
        "style": {}
      }
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "dropCap": {
      "type": "boolean",
      "default": false
    },
    "placeholder": {
      "type": "string"
    },
    "direction": {
      "type": "string",
      "enum": [
        "ltr",
        "rtl"
      ]
    }
  },
  "supports": {
    "reusable": true,
    "anchor": true,
    "className": false,
    "color": {
      "link": false,
      "__experimentalDefaultControls": {
        "background": false,
        "text": true
      }
    },
    "__experimentalStyle": {
      "color": {
        "text": "var(--wp--theme--color--text , #E0E0E0)"
      }
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontStyle": false,
      "__experimentalFontWeight": false,
      "__experimentalLetterSpacing": false,
      "__experimentalTextTransform": false,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    },
    "__experimentalSelector": "div",
    "__unstablePasteTextInline": true
  },
  "editorStyle": "wp-block-paragraph-editor",
  "style": "wp-block-paragraph",
  "usesContext": [
    "xapp/data"
  ]
}