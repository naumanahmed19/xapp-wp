{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "xapp/screen",
  "version": "0.1.0",
  "title": "Screen",
  "category": "design",
  "icon": "mobile",
  "description": "Screen can be used to display as a page, drawer, or a modal.",
  "supports": {
    "html": false,
    "lock": true,
    "anchor": true,
    "color": {
      "gradients": false,
      "link": false,
      "__experimentalDefaultControls": {
        "background": true,
        "text": false
      }
    }
  },
  "parent": [
    "xapp/screens"
  ],
  "textdomain": "mdc-tabs",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "usesContext": [
    "screens/settings"
  ],
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "screenId": {
      "type": "string",
      "default": ""
    },
    "verticalAlignment": {
      "type": "string"
    },
    "allowedBlocks": {
      "type": "array"
    },
    "templateLock": {
      "type": [
        "string",
        "boolean"
      ],
      "enum": [
        "all",
        false
      ]
    },
    "style": {
      "type": "object",
      "default": {}
    },
    "tabScreenIndex": {
      "type": "number"
    },
    "index": {
      "type": "number"
    },
    "icon": {
      "type": "object",
      "default": {}
    },
    "title": {
      "type": "string"
    }
  }
}